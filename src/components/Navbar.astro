---
const enlaces = [
    {
        id: 1,
        name: "Use Cases",
    },
    {
        id: 2,
        name: "Pricing",
    },
    {
        id: 3,
        name: "Blog",
    },
    {
        id: 4,
        name: "Custommers",
    },
    {
        id: 5,
        name: "Docs",
    },
]
---
<nav class="flex flex-col md:flex-row justify-between items-center p-2 w-full h-auto md:h-16 text-[#fff] font-medium border-b-[1px] border-[#272838]" id="NavbarComponent">
    <div class="w-full md:w-auto justify-between flex flex-grow basis-0 pl-2 border-[#272838] py-1 md:py-0" id="BoxInitNavbar">
        <img class="w-7 h-auto" src="https://evervault.com/images/icon-white.svg" alt="Evervault">
        <button class="w-14 h-12 rounded mr-2 p-2 bg-[#272838] flex flex-col gap-y-2 justify-center items-center md:hidden" id="btnNavbar">
            <div class="w-7 h-0.5 bg-white"></div>
            <div class="w-7 h-0.5 bg-white"></div>
        </button>
    </div>
    <ul class="md:flex flex flex-col md:flex-row text-center md:w-auto w-full [&>a]:inline-block [&>a]:px-3 md:[&>a]:py-2 [&>a]:py-4 hidden md:px-0 md:mt-0 px-2 mt-2" id="urlNavbar">
        {
            enlaces.map(enlace => (
                <a href="/" class="hover:bg-slate-900 md:hover:bg-transparent hover:text-zinc-400 rounded transition-all md:border-none border-b-[1px] border-[#272838]">{enlace.name}</a>
            ))
        }
    </ul>
    <section class="md:flex flex flex-grow basis-0 md:justify-end justify-center items-center [&>a]:px-3 [&>a]:py-2 md:py-0 pt-4 pb-2 hidden gap-x-2" id="sectionLogin">
        <a class="hover:bg-[#272838] transition-colors rounded-full" href="/">Log in</a>
        <a class="bg-[#eee] hover:bg-white transition-colors text-[#010314] rounded-full" href="/">Sign up</a>
    </section>
</nav>